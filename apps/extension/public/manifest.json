{
  "manifest_version": 3,
  "name": "AI UGCify - TikTok Shop Video Generator",
  "version": "1.0.0",
  "description": "Generate AI-powered UGC marketing videos from TikTok Shop products instantly",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "notifications",
    "identity"
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "host_permissions": [
    "https://*.tiktok.com/*",
    "https://api.aiugcify.com/*",
    "http://localhost:3000/*",
    "https://*.cloudinary.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tiktok.com/*/product/*",
        "https://*.tiktok.com/shop/*",
        "https://shop.tiktok.com/*"
      ],
      "js": ["src/content/index.ts"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI UGCify"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
