{
  "name": "aiugcify",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered UGC video generator for TikTok Shop products",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter @aiugcify/api dev",
    "dev:extension": "pnpm --filter @aiugcify/extension dev",
    "build": "pnpm run --parallel build",
    "build:api": "pnpm --filter @aiugcify/api build",
    "build:extension": "pnpm --filter @aiugcify/extension build",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run --parallel lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm run --parallel test",
    "db:generate": "pnpm --filter @aiugcify/api db:generate",
    "db:push": "pnpm --filter @aiugcify/api db:push",
    "db:migrate": "pnpm --filter @aiugcify/api db:migrate",
    "db:seed": "pnpm --filter @aiugcify/api db:seed",
    "db:studio": "pnpm --filter @aiugcify/api db:studio",
    "clean": "pnpm run --parallel clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
